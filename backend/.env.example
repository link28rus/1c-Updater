# База данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=1c_updater

# JWT аутентификация
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Настройки сервера
PORT=3000
NODE_ENV=development
HOST=localhost

# URL фронтенда для CORS
FRONTEND_URL=http://localhost:5173

# Директория для загрузки дистрибутивов
UPLOAD_DIR=./uploads/distributions

# Секретный ключ для шифрования паролей администраторов ПК
# ВАЖНО: Измените на случайную строку в production!
ENCRYPTION_SECRET=your-encryption-secret-change-in-production

# URL сервера (используется для генерации скриптов установки агентов)
# Если не указан, используется HOST:PORT
SERVER_URL=http://localhost:3000
